<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnLineLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLineGetUserProfile"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButton"
        android:text="Login" />

    <Button
        android:id="@+id/btnLineGetUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="onClickButton"
        android:text="Get Profile" />

    <Button
        android:id="@+id/btnLineLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLineGetUserProfile"
        android:layout_centerHorizontal="true"
        android:onClick="onClickButton"
        android:text="Logout" />
</RelativeLayout>
